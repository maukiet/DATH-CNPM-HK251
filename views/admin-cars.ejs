                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        return `S·ªë l∆∞·ª£ng: ${context.parsed.y} xe`;
                                    }
                                }
                            }
                        },
                        scales: {
