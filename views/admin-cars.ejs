    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('brandsChart');
            if (ctx) {
                // Nh·∫≠n d·ªØ li·ªáu stats t·ª´ Controller truy·ªÅn xu·ªëng
                // Use JSON.parse with escaped quotes to avoid syntax errors in IDE
                let stats = [];
                try {
                    stats = JSON.parse('<%- JSON.stringify(stats || []).replace(/\\/g, "\\\\").replace(/\'/g, "\\\'") %>');
                } catch (e) {
                    console.error('Error parsing stats:', e);
                }

                const labels = stats.map(s => s.brand);
                const data = stats.map(s => s.count);

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'S·ªë l∆∞·ª£ng xe',
                            data: data,
                            backgroundColor: 'rgba(13, 110, 253, 0.6)', // M√†u xanh Bootstrap primary
