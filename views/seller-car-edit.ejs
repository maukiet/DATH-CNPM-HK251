<%- include('partials/header') %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Sửa thông tin xe</h4>
                    </div>
                    <div class="card-body">
                        <form action="<%= formAction %>" method="POST" enctype="multipart/form-data">

                            <!-- Hiển thị ảnh hiện tại -->
                            <div class="mb-4 text-center">
                                <label class="form-label d-block">Ảnh hiện tại</label>
                                <img src="<%= car.image_url || 'https://via.placeholder.com/300x200?text=No+Image' %>"
                                    alt="<%= car.brand %> <%= car.model %>" class="img-fluid rounded shadow-sm"
                                    style="max-height: 200px;"
                                    onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200?text=No+Image';">
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="brand" class="form-label">Hãng xe *</label>
                                    <input type="text" class="form-control" id="brand" name="brand"
                                        value="<%= car.brand %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="model" class="form-label">Model *</label>
                                    <input type="text" class="form-control" id="model" name="model"
                                        value="<%= car.model %>" required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="year" class="form-label">Năm sản xuất *</label>
                                    <input type="number" class="form-control" id="year" name="year"
                                        value="<%= car.year %>" required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="price" class="form-label">Giá bán (VNĐ) *</label>
                                    <input type="number" class="form-control" id="price" name="price"
                                        value="<%= car.price %>" required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="mileage" class="form-label">Số km đã đi (ODO)</label>
                                    <input type="number" class="form-control" id="mileage" name="mileage"
                                        value="<%= car.mileage || 0 %>">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Mô tả chi tiết</label>
                                <textarea class="form-control" id="description" name="description"
                                    rows="4"><%= car.description || '' %></textarea>
                            </div>

                            <hr class="my-3">

                            <div class="mb-3">
                                <label class="form-label d-block">Thay đổi hình ảnh (nếu muốn)</label>

                                <!-- Upload ảnh từ máy -->
                                <div class="mb-2">
                                    <label for="image_file" class="form-label small">Upload ảnh mới từ máy</label>
                                    <input type="file" class="form-control" id="image_file" name="image_file"
                                        accept="image/*">
                                </div>

                                <div class="text-center my-2">
                                    <span class="small text-muted">Hoặc</span>
                                </div>

                                <!-- Hoặc dùng URL ảnh -->
                                <div class="mb-2">
                                    <label for="image_url" class="form-label small">Dùng URL ảnh mới (tùy chọn)</label>
                                    <input type="url" class="form-control" id="image_url" name="image_url"
                                        placeholder="https://link-den-anh-moi.jpg">
                                </div>

                                <div class="form-text">
                                    Nếu không thay đổi ảnh, hệ thống sẽ giữ nguyên ảnh hiện tại.
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="<%= backUrl %>" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save me-1"></i> Lưu thay đổi
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>