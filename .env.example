# --- SERVER CONFIGURATION ---
PORT=3000
# Chuỗi bí mật cho session (tùy chọn)
SESSION_SECRET=bkgenesis_secret_key_12345

# --- DATABASE CONNECTION (MySQL) ---
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=bkgenesis_db

# --- OAUTH (GOOGLE & FACEBOOK) ---
# Nếu không dùng đăng nhập MXH, có thể để trống các biến này
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# --- EMAIL CONFIGURATION (SMTP) ---
# Dùng để gửi mail reset mật khẩu.
# Nếu để trống, link reset pass sẽ hiện trong console log (chế độ demo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="BKGenesis Support" <your_email@gmail.com>